{
  "expo": {
    "name": "SmartPlug App",
    "slug": "smart-plug-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "package": "com.yourcompany.smartplug",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT"
      ]
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "plugins": ["expo-build-properties"],
    "expo-build-properties": {
      "android": {
        "compileSdkVersion": 33,
        "minSdkVersion": 21,
        "targetSdkVersion": 33
      }
    }
  }
}
